extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="oldPassword" , placeholder="old password" type="password", required)  
        input(name="newPassword" , placeholder="new password" type="password", required)  
        input(name="newPasswordConfirmation" , placeholder="new password confirmation" type="password", required)  
        input(type="submit", value="Change Password")