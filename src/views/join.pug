extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="name" , placeholder="name" type="test", required)  
        input(name="email" , placeholder="email" type="email", required) 
        input(name="username" , placeholder="username" type="test", required) 
        input(name="password" , placeholder="password" type="password", required)  
        input(name="password2" , placeholder="confirm password" type="password", required)  
        input(name="location" , placeholder="location" type="test", required)  
        input(type="submit", placeholder="submit" value="Join")
    
    hr 
    div     
        span Already have an account? 
        a(href="/login") Login now &rarr;