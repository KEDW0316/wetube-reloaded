extends base

block content 
    if errorMessage
        span=errorMessage

    form(method="POST")
        input(name="username" , placeholder="username" type="test", required) 
        input(name="password" , placeholder="password" type="password", required)  
        input(type="submit", placeholder="submit" value="Join")
        br
        a(href="/users/github/start") Continue with Github &rarr;
    hr 
    div     
        span Don't have an account? 
        a(href="/join") Create now &rarr;