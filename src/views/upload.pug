extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Title" ,name="title", required, type="text", maxlength=80)
        input(placeholder="Description", name="description", required, type="text", minlength=20)
        input(placeholder="Hashtags, seperated by comma", name="hashtags", required, type="text")
        input(value="Upload", type="submit")